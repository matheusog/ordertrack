<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:cms="sap.suite.ui.commons"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_ComparisonChartStatus" >
	
	<VBox width="{= ${device>/system/phone} ? '100%' : '33%' }" >
		<cms:ChartContainer
			showFullScreen="true"
			showPersonalization="false"
			autoAdjustHeight="false"
			enableScrolling="false"
			title="Status de Crédito"
			showZoom="false">
			<cms:content>
				<cms:ChartContainerContent>
					<cms:content>
						<l:HorizontalLayout class="sapUiContentPadding" >
							<GenericTile frameType="TwoByOne">
								<tileContent>
									<TileContent>
										<content>
											<mc:ComparisonMicroChart>
												<mc:data>
													<mc:ComparisonMicroChartData title="Aprovadas"
														value="102" color="Good" />
													<mc:ComparisonMicroChartData title="Bloqueadas"
														value="50" color="Error" />
												</mc:data>
											</mc:ComparisonMicroChart>
										</content>
									</TileContent>
									<TileContent>
										<content>
											<mc:ComparisonMicroChart>
												<mc:data>
													<mc:ComparisonMicroChartData title="Liberadas"
														value="20" color="Critical" />
													<mc:ComparisonMicroChartData title="Não Verificadas"
														value="10" color="Neutral" />
												</mc:data>
											</mc:ComparisonMicroChart>
										</content>
									</TileContent>
								</tileContent>
							</GenericTile>
						</l:HorizontalLayout>
					</cms:content>
				</cms:ChartContainerContent>
			</cms:content>
		</cms:ChartContainer>
		
		
		<cms:ChartContainer
			showFullScreen="true"
			showPersonalization="false"
			autoAdjustHeight="false"
			enableScrolling="false"
			title="Status de Bloqueio"
			showZoom="false">
			<cms:content>
				<cms:ChartContainerContent>
					<cms:content>
						<l:HorizontalLayout class="sapUiContentPadding" >
							<GenericTile frameType="TwoByOne">
								<tileContent>
									<TileContent footer="Bloqueio de Remessa">
										<content>
											<mc:ComparisonMicroChart>
												<mc:data>
													<mc:ComparisonMicroChartData title="Liberadas"
														value="1" color="Good" />
													<mc:ComparisonMicroChartData title="Bloqueadas"
														value="11" color="Error" />
												</mc:data>
											</mc:ComparisonMicroChart>
										</content>
									</TileContent>
									<TileContent footer="Bloqueio de Limbo">
										<content>
											<mc:ComparisonMicroChart>
												<mc:data>
													<mc:ComparisonMicroChartData title="Liberadas"
														value="10" color="Good" />
													<mc:ComparisonMicroChartData title="Bloqueadas"
														value="2" color="Error" />
												</mc:data>
											</mc:ComparisonMicroChart>
										</content>
									</TileContent>
								</tileContent>
							</GenericTile>
						</l:HorizontalLayout>
					</cms:content>
				</cms:ChartContainerContent>
			</cms:content>
		</cms:ChartContainer>
	</VBox>
	
</mvc:View>