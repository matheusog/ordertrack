<mvc:View 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	controllerName="com.arcelor.scm.ordertrack.controller.S2_ItensCarteira">

	<Page	title="{i18n>s2Title}" 
			showNavButton="true" 
			navButtonPress=".onNavBack">
		
		<content>
			
			<table:TreeTable 
		        id="treeTable"
		        selectionMode="Single"
		        enableColumnReordering="false"
		        expandFirstLevel="true"
		        rows="{
		            path : 'itens>/itens',
		            parameters : {
		                countMode: 'Inline',
		                treeAnnotationProperties : {
		                    hierarchyLevelFor:		'hier',
		                    hierarchyNodeFor:		'id',
		                    hierarchyParentNodeFor: 'parent',
		                    hierarchyDrillStateFor: 'drill'
		                }
		            }
		        }">
				
				<table:columns>
					<table:Column width="8rem">
						<Label text="Documento" />
						<table:template>
							<Text text="{itens>documento}"/>
						</table:template>
					</table:Column>
					<table:Column width="5rem">
						<Label text="Item" />
						<table:template>
							<Text text="{itens>item}"/>
						</table:template>
					</table:Column>
					<table:Column width="8rem">
						<Label text="Cliente" />
						<table:template>
							<Text text="{itens>cliente}"/>
						</table:template>
					</table:Column>
					<table:Column width="30rem">
						<Label text="Nome do Cliente" />
						<table:template>
							<Text text="{itens>cliente_txt}"/>
						</table:template>
					</table:Column>
					<table:Column width="8rem">
						<Label text="Material" />
						<table:template>
							<Text text="{itens>material}"/>
						</table:template>
					</table:Column>
					<table:Column width="30rem">
						<Label text="Descrição do Material" />
						<table:template>
							<Text text="{itens>material_txt}"/>
						</table:template>
					</table:Column>
					<table:Column width="8rem">
						<Label text="Data de Criação" />
						<table:template>
							<DatePicker value="{itens>data}" editable="false"/>
						</table:template>
					</table:Column>
				</table:columns>
				
			</table:TreeTable>	
			
		</content>
		
	</Page>
	
</mvc:View>