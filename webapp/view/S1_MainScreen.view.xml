<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page title="{i18n>appTitle}">
		
		<fb:FilterBar reset="onReset" search="onSearch" showClearButton="true">
			<fb:filterItems>
				<fb:FilterItem name="A" label="Delivery Date">
					<fb:control>
						<DatePicker/>
					</fb:control>				
				</fb:FilterItem>
			</fb:filterItems>
	    </fb:FilterBar>	
		<content>
			<mvc:XMLView 
				viewName="com.arcelor.scm.ordertrack.view.S1_DonutChart" 
				displayBlock="true"/>
		</content>
	</Page>
</mvc:View>