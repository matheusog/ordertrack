<mvc:View 
	xmlns:chart="sap.suite.ui.microchart" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:cms="sap.suite.ui.commons"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page title="{i18n>appTitle}">
		<content>
			<VBox width="50%">
			<cms:ChartContainer
				id="chartContainer"
				showFullScreen="true"
				showPersonalization="false"
				autoAdjustHeight="false"
				enableScrolling="false"
				title="{i18n>s1TitleBaseline}">
				<cms:content>
					<cms:ChartContainerContent>
						<cms:content>
							<viz:VizFrame 
								id="idVizBaseline" 
			                	vizType='donut'
			                	selectData=".onSelectDataBaseline">
				                <viz:dataset>
				                    <viz.data:FlattenedDataset data="{donutChart>/d}">
				                        <viz.data:dimensions>
				                            <viz.data:DimensionDefinition name="Status"
				                                value="{donutChart>descricao}" 
				                                displayValue="{donutChart>descricao} - {donutChart>documents}"/>
				                        </viz.data:dimensions>
				                        <viz.data:measures>
				                            <viz.data:MeasureDefinition name="Documentos"
				                                value="{donutChart>documents}" />
				                        </viz.data:measures>
				                    </viz.data:FlattenedDataset>
				                </viz:dataset>
				
				                <viz:feeds>
				                    <viz.feeds:FeedItem uid="size" type="Measure"
				                        values="Documentos" />
				                    <viz.feeds:FeedItem uid="color" type="Dimension"
				                        values="Status" />
				                </viz:feeds>
				            </viz:VizFrame>	
						</cms:content>
					</cms:ChartContainerContent>
				</cms:content>
			</cms:ChartContainer>
			</VBox>
		</content>
	</Page>
</mvc:View>