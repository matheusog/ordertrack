<mvc:View 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen">

	<Page id="pageS1" title="{i18n>orderTracking}">
		
		<f:SimpleForm title="{path:'/dateValue', type:'sap.ui.model.type.Date', formatOptions: { style: 'full'}}" />

		<TileContainer id="tileCarteira">

			<StandardTile
				id="idCarteira"
				icon="sap-icon://pie-chart"
				type="Monitor"
				title="Status Carteira"
				press="onTilePress"/>

			<StandardTile
				id="idDetalhe"
				icon="sap-icon://detail-view"
				type="Monitor"
				title="Detalhes Carteira"
				press="onTilePress"/>

		</TileContainer>
		
	</Page>
	
</mvc:View>