<mvc:View 
	xmlns:chart="sap.suite.ui.microchart" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:cms="sap.suite.ui.commons"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page title="{i18n>appTitle}">
		
		<fb:FilterBar reset="onReset" search="onSearch" showClearButton="true">
			<fb:filterItems>
				<fb:FilterItem name="A" label="Delivery Date">
					<fb:control>
						<DatePicker/>
					</fb:control>				
				</fb:FilterItem>
			</fb:filterItems>
	    </fb:FilterBar>	
	    
		<content>
			
			<VBox width="50%">
				
				<cms:ChartContainer
					id="chartContainer"
					showFullScreen="true"
					showPersonalization="false"
					autoAdjustHeight="false"
					enableScrolling="false"
					showZoom="false"
					title="{i18n>s1TitleBaseline}">
					<cms:content>
						<cms:ChartContainerContent>
							<cms:content>
								<viz:VizFrame 
									id="idVizBaseline" 
				                	vizType='donut'
				                	selectData=".onSelectDataBaseline">
					                <viz:dataset>
					                    <viz.data:FlattenedDataset data="{donutChart>/d}">
					                        <viz.data:dimensions>
					                            <viz.data:DimensionDefinition name="Status"
					                                value="{donutChart>descricao}" 
					                                displayValue="{donutChart>descricao} - {donutChart>documents}"/>
					                        </viz.data:dimensions>
					                        <viz.data:measures>
					                            <viz.data:MeasureDefinition name="Documentos"
					                                value="{donutChart>documents}" />
					                        </viz.data:measures>
					                    </viz.data:FlattenedDataset>
					                </viz:dataset>
					
					                <viz:feeds>
					                    <viz.feeds:FeedItem uid="size" type="Measure"
					                        values="Documentos" />
					                    <viz.feeds:FeedItem uid="color" type="Dimension"
					                        values="Status" />
					                </viz:feeds>
					            </viz:VizFrame>	
							</cms:content>
						</cms:ChartContainerContent>
					</cms:content>
				</cms:ChartContainer>
				
				<cms:ChartContainer
					id="chartContainer2"
					showFullScreen="true"
					showPersonalization="false"
					autoAdjustHeight="false"
					enableScrolling="false"
					showZoom="false"
					title="{i18n>s1TitleReplanejado}">
					<cms:content>
						<cms:ChartContainerContent>
							<cms:content>
								<viz:VizFrame 
									id="idVizReplanejado" 
				                	vizType='donut'
				                	selectData=".onSelectDataReplanejado">
					                <viz:dataset>
					                    <viz.data:FlattenedDataset data="{donutChart>/e}">
					                        <viz.data:dimensions>
					                            <viz.data:DimensionDefinition name="Status"
					                                value="{donutChart>descricao}" 
					                                displayValue="{donutChart>descricao} - {donutChart>documents}"/>
					                        </viz.data:dimensions>
					                        <viz.data:measures>
					                            <viz.data:MeasureDefinition name="Documentos"
					                                value="{donutChart>documents}" />
					                        </viz.data:measures>
					                    </viz.data:FlattenedDataset>
					                </viz:dataset>
					
					                <viz:feeds>
					                    <viz.feeds:FeedItem uid="size" type="Measure"
					                        values="Documentos" />
					                    <viz.feeds:FeedItem uid="color" type="Dimension"
					                        values="Status" />
					                </viz:feeds>
					            </viz:VizFrame>	
							</cms:content>
						</cms:ChartContainerContent>
					</cms:content>
				</cms:ChartContainer>
				
			</VBox>
			
		</content>
	</Page>
</mvc:View>