<mvc:View 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen">
	
	<Page title="{i18n>appTitle} - {path:'/dateValue', type:'sap.ui.model.type.Date', formatOptions: { style: 'long'}}">
		
		<content>
			<mvc:XMLView 
				viewName="com.arcelor.scm.ordertrack.view.S1_Filter" 
				displayBlock="true"/>
		</content>
		
		<content>
			<mvc:XMLView 
				viewName="com.arcelor.scm.ordertrack.view.S1_DonutChart" 
				displayBlock="true"/>
		</content>
		
		<content>
			<mvc:XMLView 
				viewName="com.arcelor.scm.ordertrack.view.S1_ComparisonChart" 
				displayBlock="true"/>
		</content>

		<content>
			<mvc:XMLView 
				viewName="com.arcelor.scm.ordertrack.view.S1_ComparisonChartStatus" 
				displayBlock="true"/>
		</content>
		
	</Page>
</mvc:View>