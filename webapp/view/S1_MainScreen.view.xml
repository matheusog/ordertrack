<mvc:View 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen">
	
	<Page title="{i18n>appTitle} - {path:'/dateValue', type:'sap.ui.model.type.Date', formatOptions: { style: 'long'}}"
		  busy="{view>/busy}"
		  busyIndicatorDelay="{view>/busyDelay}">
		
		<content>
			
			<core:Fragment fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_Filter" type="XML"/>
				
			<!--
			<mvc:XMLView 
				viewName="com.arcelor.scm.ordertrack.view.S1_Filter" displayBlock="true"/>
			-->
			
			<FlexBox 
				direction="{= ${device>/system/phone} ? 'Column' : 'Row'  }"
				width="100%"
				renderType="Div"
				alignItems="Start"
				justifyContent="Center">
				
				<core:Fragment 
					fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_DonutChart" type="XML">
				</core:Fragment>
				<core:Fragment 
					class="sapUiSmallMargin"
					fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_ComparisonChart" type="XML">
				</core:Fragment>
				<core:Fragment 
					class="sapUiSmallMargin"
					fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_ComparisonChartStatus" type="XML">
				</core:Fragment>
				<!--
				<mvc:XMLView 
					viewName="com.arcelor.scm.ordertrack.view.S1_DonutChart" displayBlock="true" class="sapUiSmallMargin">
					<mvc:layoutData> <FlexItemData growFactor="3" /> </mvc:layoutData>
				</mvc:XMLView>
				
				<mvc:XMLView 
					viewName="com.arcelor.scm.ordertrack.view.S1_ComparisonChart" displayBlock="true" class="sapUiSmallMargin">
					<mvc:layoutData> <FlexItemData growFactor="2" /> </mvc:layoutData>
				</mvc:XMLView>

				<mvc:XMLView 
					viewName="com.arcelor.scm.ordertrack.view.S1_ComparisonChartStatus" displayBlock="true" class="sapUiSmallMargin">
					<mvc:layoutData> <FlexItemData growFactor="1" /> </mvc:layoutData>
				</mvc:XMLView>
				-->
			
			</FlexBox>
		</content>
		
	</Page>
</mvc:View>