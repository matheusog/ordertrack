<mvc:View 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreenP1">

	<Page 
		title="{i18n>appTitle}"
		showNavButton="true"  
		navButtonPress=".onNavBack"
		busy="{view>/busy}"
		busyIndicatorDelay="{view>/busyDelay}">
		  
		<content>
			
			<core:Fragment fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_Filter" type="XML"/>

			<FlexBox 
				direction="{= ${device>/system/phone} ? 'Column' : 'Row'  }"
				width="100%"
				renderType="Div"
				alignItems="Start"
				justifyContent="Start">

				<core:Fragment 
					class="sapUiTinyMargin" 
					fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_DonutChart" type="XML">
				</core:Fragment>
				
				<core:Fragment 
					class="sapUiTinyMargin" 
					fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_ComparisonChart" type="XML">
				</core:Fragment>
				
				<core:Fragment 
					class="sapUiTinyMargin" 
					fragmentName="com.arcelor.scm.ordertrack.view.fragment.S1_ComparisonChartStatus" type="XML">
				</core:Fragment>
		
			</FlexBox>

		</content>
		
	</Page>
	
</mvc:View>