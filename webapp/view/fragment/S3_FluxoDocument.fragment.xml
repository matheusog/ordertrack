<core:FragmentDefinition
	id="fragFluxo"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:commons="sap.suite.ui.commons"
	controllerName="com.arcelor.scm.ordertrack.controller.S3_MainScreen">

	<Panel  busy="{view>/busy}"
			busyIndicatorDelay="{view>/busyDelay}">

		<OverflowToolbar>
			<ToolbarSpacer />
			<Button press="onZoomIn"  type="Transparent" icon="sap-icon://zoom-in"/>
			<Button press="onZoomOut" type="Transparent" icon="sap-icon://zoom-out"/>
		</OverflowToolbar>
		
		<FlexBox
			alignItems="Start"
			justifyContent="{= ${device>/system/phone} ? 'Start' : 'Center' }">
					
			<commons:ProcessFlow
				id="processflow"
				wheelZoomable="false"
				nodes="{fluxoNodes>/}"
				lanes="{fluxoLanes>/}"
				nodePress="onNodePress">
				<commons:nodes>
					<commons:ProcessFlowNode
						laneId="{fluxoNodes>Lane}"
						nodeId="{fluxoNodes>Id}"
						title="{fluxoNodes>Title}"
						focused="{fluxoNodes>focus}"
						state="{fluxoNodes>State}"
						stateText="{fluxoNodes>StateText}"
						children="{fluxoNodes>Children}"
						texts="{fluxoNodes>Texts}" />
				</commons:nodes>
				<commons:lanes>
					<commons:ProcessFlowLaneHeader
						laneId="{fluxoLanes>Id}"
						iconSrc="{fluxoLanes>Icon}"
						text="{fluxoLanes>Label}"
						position="{fluxoLanes>Position}"/>
				</commons:lanes>
			</commons:ProcessFlow>
		
		</FlexBox>

	</Panel>
	
