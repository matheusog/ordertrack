<core:FragmentDefinition
	id="fragFluxo"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:commons="sap.suite.ui.commons"
	controllerName="com.arcelor.scm.ordertrack.controller.S3_MainScreen">

	<Panel  busy="{view>/busy}"
			busyIndicatorDelay="{view>/busyDelay}">

		<OverflowToolbar>
			<ToolbarSpacer />
			<Button text="Zoom In"	press="onZoomIn"  />
			<Button text="Zoom Out" press="onZoomOut" />
		</OverflowToolbar>
		
		<commons:ProcessFlow
			id="processflow"
			scrollable="false"
			nodes="{fluxoNodes>/}"
			lanes="{fluxoLanes>/}"
			nodePress="onNodePress">
			<commons:nodes>
				<commons:ProcessFlowNode
					laneId="{fluxoNodes>Lane}"
					nodeId="{fluxoNodes>Id}"
					title="{fluxoNodes>Title}"
					state="{fluxoNodes>State}"
					stateText="{fluxoNodes>StateText}"
					children="{fluxosTransp>children}"/>
					<!-- texts="{fluxosTransp>texts}" /> --> 
			</commons:nodes>
			<commons:lanes>
				<commons:ProcessFlowLaneHeader
					laneId="{fluxoLanes>Id}"
					iconSrc="{fluxoLanes>Icon}"
					text="{fluxoLanes>Label}"
					position="{fluxoLanes>Position}"/>
			</commons:lanes>
		</commons:ProcessFlow>

	</Panel>
	
</core:FragmentDefinition>