<!--<mvc:View	-->
<core:FragmentDefinition
	id="fragFilter"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen">
	
	<VBox>
		
		<fb:FilterBar search="onSearch" showClearButton="true">
			<fb:filterItems>
				
				<fb:FilterItem name="WERKS" label="Centro">
					<fb:control>
						<ComboBox	
							id="comboWerks"
							showSecondaryValues= "true" 
							items="{path: 'filterCentro>/', sorter: { path: 'filterCentro>werks' }}">
							<core:ListItem	key="{filterCentro>werks}" 
											text="{filterCentro>werks}" 
											additionalText = "{filterCentro>werks_txt}" />
						</ComboBox>
					</fb:control>				
				</fb:FilterItem>
				
				<fb:FilterItem name="KUNNR" label="Cliente">
					<fb:control>
						<ComboBox	
							id="comboKunnr"
							showSecondaryValues= "true" 
							items="{path: 'filterCliente>/', sorter: { path: 'filterCliente>kunnr' }}">
							<core:ListItem	key="{filterCliente>kunnr}" 
											text="{filterCliente>kunnr}" 
											additionalText = "{filterCliente>kunnr_txt}" />
						</ComboBox>
					</fb:control>				
				</fb:FilterItem>
				
				<fb:FilterItem name="DATA" label="Data">
					<fb:control>
						<DatePicker id="dateDataCri"/>
					</fb:control>				
				</fb:FilterItem>
				
			</fb:filterItems>
	    </fb:FilterBar>	
		
	</VBox>
</core:FragmentDefinition>