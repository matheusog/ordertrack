<!--<mvc:View	-->
<core:FragmentDefinition
	id="fragFilter"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen">
	
	<VBox>
		
		<fb:FilterBar id="filterBar" search="onSearch" >
			
			<fb:filterItems>
				
				<fb:FilterItem name="WERKS" label="Centro">
					<fb:control>
						<ComboBox
							id="comboWerks"
							showSecondaryValues= "true" 
							items="{path: 'Carteira>/FILTER_WERKSSet', sorter: { path: 'Carteira>Werks' }}">
							<core:ListItem	key="{Carteira>Werks}" 
											text="{Carteira>Werks}" 
											additionalText = "{Carteira>WerksName}" />
						</ComboBox>
					</fb:control>				
				</fb:FilterItem>
				
				<fb:FilterItem name="KUNNR" label="Cliente">
					<fb:control>
						<ComboBox
							id="comboKunnr"
							showSecondaryValues= "true" 
							items="{path: 'Carteira>/FILTER_KUNNRSet', sorter: { path: 'Carteira>Name' }}">
							<core:ListItem	key="{Carteira>Kunnr}" 
											text="{Carteira>Kunnr}" 
											additionalText = "{Carteira>Name}" />
						</ComboBox>
					</fb:control>				
				</fb:FilterItem>
				
				<fb:FilterItem name="DATA" label="Data">
					<fb:control>
						<DatePicker id="dateDataCri"/>
					</fb:control>				
				</fb:FilterItem>
				
			</fb:filterItems>
			
	    </fb:FilterBar>	
		
	</VBox>
</core:FragmentDefinition>