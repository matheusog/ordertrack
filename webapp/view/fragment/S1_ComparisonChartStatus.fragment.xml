<core:FragmentDefinition
	id="fragChartStatus"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:cms="sap.suite.ui.commons"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreen" >
	
	<!--width="{= ${device>/system/phone} ? '100%' : '100%' }" >-->
			<VBox
			 class="sapUiSmallMargin">

				<cms:ChartContainer
					showFullScreen="true"
					showPersonalization="false"
					autoAdjustHeight="false"
					enableScrolling="false"
					title="Status de CrÃ©dito"
					showZoom="false">
					<cms:content>
						<cms:ChartContainerContent>
							<cms:content>
								<l:HorizontalLayout class="sapUiContentPadding" >
									<mc:ComparisonMicroChart data="{status>/credito}">
										<mc:data>
											<mc:ComparisonMicroChartData	title="{status>descricao}"
																			value="{status>documents}" 
																			color="{status>color}" />
										</mc:data>
									</mc:ComparisonMicroChart>
								</l:HorizontalLayout>
							</cms:content>
						</cms:ChartContainerContent>
					</cms:content>
				</cms:ChartContainer>
	
					
				<cms:ChartContainer
					showFullScreen="true"
					showPersonalization="false"
					autoAdjustHeight="false"
					enableScrolling="false"
					title="Status de Bloqueio"
					showZoom="false">
					<cms:content>
						<cms:ChartContainerContent>
							<cms:content>
								<l:HorizontalLayout class="sapUiContentPadding" >
									<mc:ComparisonMicroChart data="{status>/bloqueio}">
										<mc:data>
											<mc:ComparisonMicroChartData	title="{status>descricao}"
																			value="{status>documents}" 
																			color="{status>color}" />
										</mc:data>
									</mc:ComparisonMicroChart>
								</l:HorizontalLayout>
							</cms:content>
						</cms:ChartContainerContent>
					</cms:content>
				</cms:ChartContainer>
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</VBox>
</core:FragmentDefinition>
