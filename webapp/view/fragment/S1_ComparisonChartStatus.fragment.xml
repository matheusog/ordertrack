<core:FragmentDefinition
	id="fragChartStatus"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:cms="sap.suite.ui.commons"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_MainScreenP1" >
	
	<!--width="{= ${device>/system/phone} ? '100%' : '100%' }" >-->
	<VBox width="{= ${device>/system/phone} ? '95%' : '20%' }" >
					
		<cms:ChartContainer
			showFullScreen="true"
			showPersonalization="false"
			autoAdjustHeight="false"
			enableScrolling="false"
			title="{i18n>s1TitleStatusCred}"
			showZoom="false">
			
			<cms:content>
				<cms:ChartContainerContent>
					<cms:content>
						<mc:ComparisonMicroChart data="{chartStatusCred>/}" scale="{i18n>s1Kg}">
							<mc:data>
								<mc:ComparisonMicroChartData	title="{chartStatusCred>Descricao}"
																value="{chartStatusCred>Value}" 
																color="{chartStatusCred>Color}" 
																press=".onStatusCredPressBarr"/>
							</mc:data>
						</mc:ComparisonMicroChart>
					</cms:content>
				</cms:ChartContainerContent>
			</cms:content>
			
		</cms:ChartContainer>

		<cms:ChartContainer
			showFullScreen="true"
			showPersonalization="false"
			autoAdjustHeight="false"
			enableScrolling="false"
			title="{i18n>s1TitleStatusBlq}"
			showZoom="false">
			
			<cms:content>
				<cms:ChartContainerContent>
					<cms:content>
						<mc:ComparisonMicroChart data="{chartStatusBlq>/}" scale="{i18n>s1Kg}">
							<mc:data>
								<mc:ComparisonMicroChartData	title="{chartStatusBlq>Descricao}"
																value="{chartStatusBlq>Value}" 
																color="{chartStatusBlq>Color}" 
																press=".onStatusBlqPressBarr"/>
							</mc:data>
						</mc:ComparisonMicroChart>
					</cms:content>
				</cms:ChartContainerContent>
			</cms:content>
		
		</cms:ChartContainer>
		
		<layoutData>
			<FlexItemData growFactor="1" />
		</layoutData>

	</VBox>
		
</core:FragmentDefinition>