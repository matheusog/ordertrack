<core:FragmentDefinition 
	id="fragGeo" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" 
	xmlns:vbm="sap.ui.vbm" 
	xmlns:vk="sap.ui.vk" 
	controllerName="com.arcelor.scm.ordertrack.controller.S4_MainScreen">
	
	<vk:MapContainer
		id="mapContainer"
		autoAdjustHeight="true" 
		showHome="false"
		busy="{view>/busy}"
		busyIndicatorDelay="{view>/busyDelay}">

		<vk:listPanelStack>
			<vk:ListPanelStack>
				<vk:content>
					<vk:ListPanel
						id="listPanel"
						headerText="{i18n>s4PanelTransporte}" 
						headerIcon="sap-icon://legend" 
						expanded="true" 
						mode="MultiSelect" 
						includeItemInSelection="true" 
						selectionMode="None" >
						<!-- items="{geoLocalizacao>/}"    title="{geoLocalizacao>Tknum}"-->
						
						<vk:items>
							<vk:LegendItem id="tk"  icon="sap-icon://shipping-status"/>
							<vk:LegendItem id="dh"  icon="sap-icon://history"/>
						</vk:items>
						
					</vk:ListPanel>
				</vk:content>
			</vk:ListPanelStack>
		</vk:listPanelStack>

		<vk:ContainerContent>
			<vk:content>
				<vbm:GeoMap id="GeoMap">
					<vbm:vos>
						<vbm:Spots items="{geoLocalizacao>/}">
							<vbm:items>
								<vbm:Spot position="{geoLocalizacao>Longitude};{geoLocalizacao&gt;Latitude};0"/>
							</vbm:items>
						</vbm:Spots>
					</vbm:vos>
				</vbm:GeoMap>
			</vk:content>
		</vk:ContainerContent>

	</vk:MapContainer>
	
</core:FragmentDefinition>