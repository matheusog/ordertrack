<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:cms="sap.suite.ui.commons"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.arcelor.scm.ordertrack.controller.S1_ComparisonChart">

	<VBox>
	<!--width="{= ${device>/system/phone} ? '100%' : '100%' }" >-->
	
		<FlexBox
		height="100px"
		alignItems="Start"
		justifyContent="Center">
				
			<cms:ChartContainer
				showFullScreen="true"
				showPersonalization="false"
				autoAdjustHeight="false"
				enableScrolling="false"
				title="Embarques de Hoje"
				showZoom="false">
				<cms:content>
					<cms:ChartContainerContent>
						<cms:content>
							<mc:ComparisonMicroChart
								data="{embarques>/embarques}"
								scale="Kg"
								colorPalette="#5cbae6, #b6d957, #fac364, #8cd3ff, #d998cb, #f2d249, #93b9c6, #ccc5a8, #52bacc, #dbdb46, #98aafb, #fb98aa">
								<mc:data>
									<mc:ComparisonMicroChartData 
										title="{embarques>descricao}"
										value="{embarques>documents}"
										press=".onComparisonPressBar"/>
								</mc:data>
							</mc:ComparisonMicroChart>	
						</cms:content>
					</cms:ChartContainerContent>
				</cms:content>
			</cms:ChartContainer>
			
		</FlexBox>
	</VBox>
	
</mvc:View>